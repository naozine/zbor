package components

import (
	"fmt"
	"zbor/internal/asr"
	"zbor/web/layouts"
)

templ TranscriptSync(sourceID string, title string, filename string, transcript *asr.Result, displaySegments []asr.DisplaySegment) {
	@layouts.Base(title + " - Transcript Sync") {
		<!-- Fixed Header with Controls -->
		<div class="fixed top-0 left-0 right-0 z-50 bg-white shadow-md">
			<div class="max-w-4xl mx-auto">
				<!-- Title Bar -->
				<div class="px-4 sm:px-6 lg:px-8 py-3 border-b border-gray-200 flex items-center">
					<a href="/articles" class="text-blue-600 hover:text-blue-800 flex items-center mr-4">
						<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
						</svg>
					</a>
					<div class="flex-1 min-w-0">
						<h1 class="text-lg font-bold text-gray-900 truncate">{ title }</h1>
						if filename != "" {
							<p class="text-sm text-gray-500 truncate">{ filename }</p>
						}
					</div>
				</div>

				<!-- Audio Player Controls -->
				<div class="px-4 sm:px-6 lg:px-8 py-3 bg-gray-50 border-b border-gray-200">
					<div class="flex items-center space-x-4">
						<button
							id="play-btn"
							class="flex items-center justify-center w-10 h-10 bg-blue-600 hover:bg-blue-700 text-white rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
						>
							<svg id="play-icon" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
							<svg id="pause-icon" class="w-5 h-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</button>

						<div class="flex-1">
							<div class="relative">
								<input
									type="range"
									id="seek-bar"
									min="0"
									max="100"
									value="0"
									class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer"
								/>
							</div>
							<div class="flex justify-between text-xs text-gray-500 mt-1">
								<span id="current-time">0:00</span>
								<span id="total-time">0:00</span>
							</div>
						</div>

						<div class="flex items-center space-x-2">
							<label class="text-sm text-gray-600">Speed:</label>
							<select id="speed-select" class="text-sm border-gray-300 rounded-md">
								<option value="0.5">0.5x</option>
								<option value="0.75">0.75x</option>
								<option value="1" selected>1x</option>
								<option value="1.25">1.25x</option>
								<option value="1.5">1.5x</option>
								<option value="2">2x</option>
							</select>
						</div>
					</div>
				</div>

				<!-- Display Options -->
				<div class="px-4 sm:px-6 lg:px-8 py-2 bg-gray-100 flex items-center space-x-6 text-sm">
					<div class="flex items-center space-x-2">
						<label class="text-gray-600">Interval:</label>
						<select id="interval-select" class="text-sm border-gray-300 rounded-md">
							<option value="5">5s</option>
							<option value="10" selected>10s</option>
							<option value="30">30s</option>
							<option value="60">60s</option>
						</select>
					</div>
					<label class="flex items-center space-x-2 cursor-pointer">
						<input type="checkbox" id="show-segments" class="rounded border-gray-300" checked/>
						<span class="text-gray-600">Show segment info</span>
					</label>
				</div>
			</div>
		</div>

		<!-- Spacer for fixed header (approx height of header) -->
		<div class="h-40"></div>

		<!-- Transcript Content -->
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pb-8">
			<div class="bg-white shadow rounded-lg">
				<div class="px-6 py-6">
					<div id="transcript" class="space-y-2 font-mono text-sm">
						for _, ds := range displaySegments {
							<div
								class="display-segment"
								data-seg-index={ fmt.Sprintf("%d", ds.Index) }
								data-start={ fmt.Sprintf("%.2f", ds.StartTime) }
								data-end={ fmt.Sprintf("%.2f", ds.EndTime) }
							>
								<!-- Main timeline row -->
								<div class="flex hover:bg-gray-50 rounded py-1">
									<span
										class="time-label text-gray-400 mr-3 whitespace-nowrap cursor-pointer hover:text-blue-600"
										data-start={ fmt.Sprintf("%.2f", ds.StartTime) }
									>
										[{ asr.FormatTimeRange(ds.StartTime, ds.EndTime) }]
									</span>
									<span class="flex-1 flex flex-wrap">
										for _, elem := range ds.Elements {
											if elem.Type == "text" {
												<span
													class="token cursor-pointer hover:bg-blue-100 rounded transition-colors"
													data-start={ fmt.Sprintf("%.3f", elem.StartTime) }
												>{ elem.Text }</span>
											} else {
												<span
													class="silence text-gray-300 cursor-pointer hover:text-gray-400"
													data-start={ fmt.Sprintf("%.3f", elem.StartTime) }
												>{ elem.Text }</span>
											}
										}
									</span>
								</div>
								<!-- ASR Segment info (toggleable, clickable for selection) -->
								if len(ds.ASRSegments) > 0 {
									<div class="segment-info text-xs ml-20 mb-1 flex items-center flex-wrap">
										for _, asrSeg := range ds.ASRSegments {
											<span
												class="asr-segment mr-1 px-1 py-0.5 rounded cursor-pointer text-gray-400 hover:bg-blue-100 hover:text-blue-600"
												data-seg-idx={ fmt.Sprintf("%d", asrSeg.Index-1) }
												data-start={ fmt.Sprintf("%.2f", asrSeg.StartTime) }
												data-end={ fmt.Sprintf("%.2f", asrSeg.EndTime) }
											>
												└─ seg{ fmt.Sprintf("%d", asrSeg.Index) }: { fmt.Sprintf("%.2f", asrSeg.StartTime) }-{ fmt.Sprintf("%.2f", asrSeg.EndTime) }
											</span>
											<button
												class="json-btn mr-3 px-1 py-0.5 text-gray-300 hover:text-blue-600 hover:bg-blue-50 rounded text-[10px] font-mono"
												data-seg-idx={ fmt.Sprintf("%d", asrSeg.Index-1) }
												title="Show JSON"
											>
												{ "{}" }
											</button>
										}
									</div>
								}
							</div>
						}
					</div>
				</div>

				<!-- Keyboard shortcuts help -->
				<div class="px-6 py-4 border-t border-gray-200 text-sm text-gray-500">
					<p>Keyboard shortcuts: <kbd class="px-1 bg-gray-100 rounded">Space</kbd> Play/Pause,
					<kbd class="px-1 bg-gray-100 rounded">←</kbd>/<kbd class="px-1 bg-gray-100 rounded">→</kbd> Seek 5s</p>
				</div>
			</div>
		</div>

		<!-- Selection Bar (hidden by default) -->
		<div id="selection-bar" class="fixed bottom-0 left-0 right-0 z-50 bg-white shadow-lg border-t border-gray-200 transform translate-y-full transition-transform duration-200">
			<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
				<div class="flex items-center justify-between">
					<div class="flex items-center space-x-4">
						<span class="text-sm text-gray-600">選択中:</span>
						<span id="selection-info" class="text-sm font-medium text-blue-600">-</span>
						<button id="clear-selection" class="text-sm text-gray-500 hover:text-gray-700">クリア</button>
					</div>
					<div class="flex items-center space-x-4">
						<div class="flex items-center space-x-2">
							<label class="text-sm text-gray-600">Model:</label>
							<select id="retranscribe-model" class="text-sm border-gray-300 rounded-md">
								<option value="reazonspeech" selected>ReazonSpeech</option>
								<option value="sensevoice">SenseVoice</option>
								<option value="whisper">Whisper</option>
								<option value="whisper:align">Whisper (Align)</option>
							</select>
						</div>
						<div class="flex items-center space-x-2">
							<label class="text-sm text-gray-600">Tempo:</label>
							<select id="retranscribe-tempo" class="text-sm border-gray-300 rounded-md">
								<option value="0.5">0.5x (超低速)</option>
								<option value="0.6">0.6x</option>
								<option value="0.7">0.7x</option>
								<option value="0.75">0.75x</option>
								<option value="0.8">0.8x</option>
								<option value="0.85" selected>0.85x</option>
								<option value="0.9">0.9x</option>
								<option value="0.95">0.95x</option>
								<option value="1.0">1.0x (通常)</option>
							</select>
						</div>
						<button
							id="retranscribe-btn"
							class="px-4 py-2 bg-orange-500 hover:bg-orange-600 text-white text-sm font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500"
						>
							再文字起こし
						</button>
					</div>
				</div>
			</div>
		</div>

		<!-- Processing overlay -->
		<div id="processing-overlay" class="fixed inset-0 z-[100] bg-black bg-opacity-50 hidden flex items-center justify-center">
			<div class="bg-white rounded-lg p-6 shadow-xl">
				<div class="flex items-center space-x-3">
					<svg class="animate-spin h-5 w-5 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
						<circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
						<path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
					</svg>
					<span class="text-gray-700">再文字起こし中...</span>
				</div>
			</div>
		</div>

		<!-- JSON Modal -->
		<div id="json-modal" class="fixed inset-0 z-[100] bg-black bg-opacity-50 hidden flex items-center justify-center">
			<div class="bg-white rounded-lg shadow-xl max-w-2xl w-full mx-4 max-h-[80vh] flex flex-col">
				<div class="flex items-center justify-between px-4 py-3 border-b border-gray-200">
					<h3 id="json-modal-title" class="font-medium text-gray-900">Segment Details</h3>
					<button id="json-modal-close" class="text-gray-400 hover:text-gray-600">
						<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
						</svg>
					</button>
				</div>
				<div class="p-4 overflow-auto flex-1">
					<pre id="json-modal-content" class="text-xs font-mono bg-gray-50 p-3 rounded overflow-x-auto whitespace-pre-wrap"></pre>
				</div>
			</div>
		</div>

		<!-- Re-transcribe Modal -->
		<div id="retranscribe-modal" class="fixed inset-0 z-[100] bg-black bg-opacity-50 hidden flex items-center justify-center">
			<div class="bg-white rounded-lg shadow-xl max-w-5xl w-full mx-4 max-h-[90vh] flex flex-col">
				<!-- Header -->
				<div class="flex items-center justify-between px-4 py-3 border-b border-gray-200">
					<h3 class="font-medium text-gray-900">再文字起こし</h3>
					<button id="retranscribe-modal-close" class="text-gray-400 hover:text-gray-600">
						<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
						</svg>
					</button>
				</div>

				<!-- Parameters -->
				<div class="px-4 py-3 border-b border-gray-200 bg-gray-50">
					<div class="flex items-center space-x-6">
						<div class="flex items-center space-x-2">
							<span class="text-sm text-gray-600">対象:</span>
							<span id="modal-selection-info" class="text-sm font-medium text-blue-600">-</span>
						</div>
						<div class="flex items-center space-x-2">
							<label class="text-sm text-gray-600">Model:</label>
							<select id="modal-model" class="text-sm border-gray-300 rounded-md">
								<option value="reazonspeech" selected>ReazonSpeech</option>
								<option value="sensevoice">SenseVoice</option>
								<option value="whisper">Whisper</option>
								<option value="whisper:align">Whisper (Align)</option>
							</select>
						</div>
						<div class="flex items-center space-x-2">
							<label class="text-sm text-gray-600">Tempo:</label>
							<select id="modal-tempo" class="text-sm border-gray-300 rounded-md">
								<option value="0.5">0.5x (超低速)</option>
								<option value="0.6">0.6x</option>
								<option value="0.7">0.7x</option>
								<option value="0.75">0.75x</option>
								<option value="0.8">0.8x</option>
								<option value="0.85" selected>0.85x</option>
								<option value="0.9">0.9x</option>
								<option value="0.95">0.95x</option>
								<option value="1.0">1.0x (通常)</option>
							</select>
						</div>
						<button
							id="modal-execute-btn"
							class="px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white text-sm font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
						>
							実行
						</button>
						<div id="modal-loading" class="hidden flex items-center space-x-2 text-gray-500">
							<svg class="animate-spin h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
								<circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
								<path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
							</svg>
							<span class="text-sm">処理中...</span>
						</div>
					</div>
				</div>

				<!-- Whisper Align Info (hidden by default, shown for whisper:align) -->
				<div id="modal-align-info" class="hidden border-b border-gray-200">
					<!-- Whisper Raw Output -->
					<div class="px-4 py-2 bg-blue-50 border-b border-blue-100">
						<div class="flex items-center space-x-2">
							<span class="text-xs font-medium text-blue-700">Whisper出力:</span>
							<span id="modal-whisper-raw" class="text-xs text-blue-900 font-mono"></span>
						</div>
					</div>
					<!-- Alignment Diff -->
					<div class="px-4 py-2 bg-gray-50">
						<div class="flex items-start space-x-2">
							<span class="text-xs font-medium text-gray-700 whitespace-nowrap">マッチング:</span>
							<div id="modal-alignment-diff" class="text-xs font-mono flex flex-wrap"></div>
						</div>
						<div class="mt-1 flex items-center space-x-3 text-xs text-gray-500">
							<span class="flex items-center"><span class="inline-block w-3 h-3 bg-gray-200 rounded mr-1"></span>共通</span>
							<span class="flex items-center"><span class="inline-block w-3 h-3 bg-green-200 rounded mr-1"></span>追加</span>
							<span class="flex items-center"><span class="inline-block w-3 h-3 bg-red-200 rounded mr-1"></span>削除</span>
						</div>
					</div>
				</div>

				<!-- Content: Two Panes -->
				<div class="flex-1 overflow-hidden flex">
					<!-- Left Pane: Original -->
					<div class="w-1/2 border-r border-gray-200 flex flex-col">
						<div class="px-4 py-2 bg-gray-100 border-b border-gray-200">
							<h4 class="text-sm font-medium text-gray-700">元のテキスト</h4>
						</div>
						<div id="modal-original-content" class="flex-1 overflow-auto p-4 text-sm font-mono">
							<!-- Original segments will be displayed here -->
						</div>
					</div>

					<!-- Right Pane: Result -->
					<div class="w-1/2 flex flex-col">
						<div class="px-4 py-2 bg-gray-100 border-b border-gray-200">
							<h4 class="text-sm font-medium text-gray-700">再文字起こし結果</h4>
						</div>
						<div id="modal-result-content" class="flex-1 overflow-auto p-4 text-sm font-mono">
							<div class="text-gray-400 text-center py-8">
								「実行」ボタンを押して再文字起こしを実行してください
							</div>
						</div>
					</div>
				</div>

				<!-- Footer -->
				<div class="px-4 py-3 border-t border-gray-200 flex justify-end space-x-3">
					<button
						id="modal-cancel-btn"
						class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 text-sm font-medium rounded-md focus:outline-none"
					>
						キャンセル
					</button>
					<button
						id="modal-apply-btn"
						class="px-4 py-2 bg-orange-500 hover:bg-orange-600 text-white text-sm font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 disabled:opacity-50 disabled:cursor-not-allowed"
						disabled
					>
						適用
					</button>
				</div>
			</div>
		</div>

		<audio id="audio" preload="auto" data-source-id={ sourceID }>
			<source src={ "/api/audio/" + sourceID + "/stream" } type="audio/wav"/>
		</audio>

		<script>
			const audio = document.getElementById('audio');
			const playBtn = document.getElementById('play-btn');
			const playIcon = document.getElementById('play-icon');
			const pauseIcon = document.getElementById('pause-icon');
			const seekBar = document.getElementById('seek-bar');
			const currentTimeEl = document.getElementById('current-time');
			const totalTimeEl = document.getElementById('total-time');
			const speedSelect = document.getElementById('speed-select');
			const intervalSelect = document.getElementById('interval-select');
			const showSegmentsCheckbox = document.getElementById('show-segments');
			const tokens = document.querySelectorAll('.token');
			const silences = document.querySelectorAll('.silence');
			const timeLabels = document.querySelectorAll('.time-label');
			const displaySegments = document.querySelectorAll('.display-segment');
			const segmentInfos = document.querySelectorAll('.segment-info');

			let currentTokenIndex = -1;
			let currentSegmentIndex = -1;

			// Format time as M:SS
			function formatTime(seconds) {
				const mins = Math.floor(seconds / 60);
				const secs = Math.floor(seconds % 60);
				return `${mins}:${secs.toString().padStart(2, '0')}`;
			}

			// Update play/pause button
			function updatePlayButton() {
				if (audio.paused) {
					playIcon.classList.remove('hidden');
					pauseIcon.classList.add('hidden');
				} else {
					playIcon.classList.add('hidden');
					pauseIcon.classList.remove('hidden');
				}
			}

			// Toggle segment info visibility
			function updateSegmentInfoVisibility() {
				const show = showSegmentsCheckbox.checked;
				segmentInfos.forEach(info => {
					info.style.display = show ? 'block' : 'none';
				});
			}
			showSegmentsCheckbox.addEventListener('change', updateSegmentInfoVisibility);
			updateSegmentInfoVisibility();

			// Highlight current token and segment based on audio time
			function updateHighlight() {
				const currentTime = audio.currentTime;
				let newTokenIndex = -1;
				let newSegmentIndex = -1;

				// Find current token
				for (let i = tokens.length - 1; i >= 0; i--) {
					const startTime = parseFloat(tokens[i].dataset.start);
					if (currentTime >= startTime) {
						newTokenIndex = i;
						break;
					}
				}

				// Find current display segment
				for (let i = displaySegments.length - 1; i >= 0; i--) {
					const startTime = parseFloat(displaySegments[i].dataset.start);
					const endTime = parseFloat(displaySegments[i].dataset.end);
					if (currentTime >= startTime && currentTime < endTime) {
						newSegmentIndex = i;
						break;
					}
				}

				// Update token highlight
				if (newTokenIndex !== currentTokenIndex) {
					if (currentTokenIndex >= 0 && currentTokenIndex < tokens.length) {
						tokens[currentTokenIndex].classList.remove('bg-yellow-200');
					}
					if (newTokenIndex >= 0) {
						tokens[newTokenIndex].classList.add('bg-yellow-200');
					}
					currentTokenIndex = newTokenIndex;
				}

				// Update segment highlight
				if (newSegmentIndex !== currentSegmentIndex) {
					if (currentSegmentIndex >= 0 && currentSegmentIndex < displaySegments.length) {
						displaySegments[currentSegmentIndex].classList.remove('bg-blue-50');
					}
					if (newSegmentIndex >= 0) {
						displaySegments[newSegmentIndex].classList.add('bg-blue-50');
						displaySegments[newSegmentIndex].scrollIntoView({ behavior: 'smooth', block: 'center' });
					}
					currentSegmentIndex = newSegmentIndex;
				}
			}

			// Play/Pause
			playBtn.addEventListener('click', () => {
				if (audio.paused) {
					audio.play();
				} else {
					audio.pause();
				}
			});

			audio.addEventListener('play', updatePlayButton);
			audio.addEventListener('pause', updatePlayButton);

			// Time update
			audio.addEventListener('timeupdate', () => {
				currentTimeEl.textContent = formatTime(audio.currentTime);
				seekBar.value = (audio.currentTime / audio.duration) * 100 || 0;
				updateHighlight();
			});

			audio.addEventListener('loadedmetadata', () => {
				totalTimeEl.textContent = formatTime(audio.duration);
			});

			// Seek bar
			seekBar.addEventListener('input', () => {
				const time = (seekBar.value / 100) * audio.duration;
				audio.currentTime = time;
			});

			// Speed control
			speedSelect.addEventListener('change', () => {
				audio.playbackRate = parseFloat(speedSelect.value);
			});

			// Interval change - reload with new interval
			intervalSelect.addEventListener('change', () => {
				const interval = intervalSelect.value;
				const url = new URL(window.location.href);
				url.searchParams.set('interval', interval);
				window.location.href = url.toString();
			});

			// Click on token to seek
			tokens.forEach(token => {
				token.addEventListener('click', () => {
					const startTime = parseFloat(token.dataset.start);
					audio.currentTime = startTime;
					audio.play();
				});
			});

			// Click on silence to seek
			silences.forEach(silence => {
				silence.addEventListener('click', () => {
					const startTime = parseFloat(silence.dataset.start);
					audio.currentTime = startTime;
					audio.play();
				});
			});

			// Click on time label to seek
			timeLabels.forEach(label => {
				label.addEventListener('click', () => {
					const startTime = parseFloat(label.dataset.start);
					audio.currentTime = startTime;
					audio.play();
				});
			});

			// Keyboard shortcuts
			document.addEventListener('keydown', (e) => {
				if (e.target.tagName === 'INPUT' || e.target.tagName === 'SELECT') return;

				switch (e.code) {
					case 'Space':
						e.preventDefault();
						if (audio.paused) {
							audio.play();
						} else {
							audio.pause();
						}
						break;
					case 'ArrowLeft':
						e.preventDefault();
						audio.currentTime = Math.max(0, audio.currentTime - 5);
						break;
					case 'ArrowRight':
						e.preventDefault();
						audio.currentTime = Math.min(audio.duration, audio.currentTime + 5);
						break;
				}
			});

			// Restore interval from URL
			const urlParams = new URLSearchParams(window.location.search);
			const savedInterval = urlParams.get('interval');
			if (savedInterval) {
				intervalSelect.value = savedInterval;
			}

			// Source ID (used for API calls)
			const sourceID = audio.dataset.sourceId;

			// === JSON Modal ===
			const jsonModal = document.getElementById('json-modal');
			const jsonModalTitle = document.getElementById('json-modal-title');
			const jsonModalContent = document.getElementById('json-modal-content');
			const jsonModalClose = document.getElementById('json-modal-close');
			const jsonBtns = document.querySelectorAll('.json-btn');

			let transcriptData = null;

			// Fetch transcript data once
			async function fetchTranscriptData() {
				if (transcriptData) return transcriptData;
				const response = await fetch(`/api/audio/${sourceID}/transcript`);
				if (response.ok) {
					transcriptData = await response.json();
				}
				return transcriptData;
			}

			// Show segment JSON
			jsonBtns.forEach(btn => {
				btn.addEventListener('click', async (e) => {
					e.stopPropagation();
					const segIdx = parseInt(btn.dataset.segIdx);

					const data = await fetchTranscriptData();
					if (!data || !data.segments || segIdx >= data.segments.length) {
						jsonModalContent.textContent = 'セグメントデータが見つかりません';
						jsonModalTitle.textContent = `Segment ${segIdx + 1}`;
						jsonModal.classList.remove('hidden');
						return;
					}

					const segment = data.segments[segIdx];

					// Find tokens within this segment's time range
					const segmentTokens = (data.tokens || []).filter(t =>
						t.start_time >= segment.start_time && t.start_time < segment.end_time
					);

					const displayData = {
						segment: segment,
						tokens: segmentTokens,
						token_count: segmentTokens.length
					};

					jsonModalTitle.textContent = `Segment ${segIdx + 1} (${segment.start_time.toFixed(2)}s - ${segment.end_time.toFixed(2)}s)`;
					jsonModalContent.textContent = JSON.stringify(displayData, null, 2);
					jsonModal.classList.remove('hidden');
				});
			});

			// Close modal
			jsonModalClose.addEventListener('click', () => {
				jsonModal.classList.add('hidden');
			});
			jsonModal.addEventListener('click', (e) => {
				if (e.target === jsonModal) {
					jsonModal.classList.add('hidden');
				}
			});

			// === Segment Selection for Re-transcription ===
			const asrSegments = document.querySelectorAll('.asr-segment');
			const selectionBar = document.getElementById('selection-bar');
			const selectionInfo = document.getElementById('selection-info');
			const clearSelectionBtn = document.getElementById('clear-selection');
			const retranscribeBtn = document.getElementById('retranscribe-btn');
			const retranscribeTempo = document.getElementById('retranscribe-tempo');
			const processingOverlay = document.getElementById('processing-overlay');

			let selectedSegments = new Set();

			function updateSelectionUI() {
				if (selectedSegments.size === 0) {
					selectionBar.classList.add('translate-y-full');
					asrSegments.forEach(seg => {
						seg.classList.remove('bg-orange-100', 'text-orange-700');
						seg.classList.add('text-gray-400');
					});
					return;
				}

				selectionBar.classList.remove('translate-y-full');

				// Update segment highlighting
				asrSegments.forEach(seg => {
					const idx = parseInt(seg.dataset.segIdx);
					if (selectedSegments.has(idx)) {
						seg.classList.add('bg-orange-100', 'text-orange-700');
						seg.classList.remove('text-gray-400');
					} else {
						seg.classList.remove('bg-orange-100', 'text-orange-700');
						seg.classList.add('text-gray-400');
					}
				});

				// Update selection info
				const sortedIndices = Array.from(selectedSegments).sort((a, b) => a - b);
				const minIdx = sortedIndices[0];
				const maxIdx = sortedIndices[sortedIndices.length - 1];

				// Find time range
				let startTime = Infinity, endTime = 0;
				asrSegments.forEach(seg => {
					const idx = parseInt(seg.dataset.segIdx);
					if (idx >= minIdx && idx <= maxIdx) {
						const start = parseFloat(seg.dataset.start);
						const end = parseFloat(seg.dataset.end);
						if (start < startTime) startTime = start;
						if (end > endTime) endTime = end;
					}
				});

				const duration = endTime - startTime;
				selectionInfo.textContent = `seg${minIdx + 1}${minIdx !== maxIdx ? '-seg' + (maxIdx + 1) : ''} (${startTime.toFixed(1)}s - ${endTime.toFixed(1)}s, ${duration.toFixed(1)}秒)`;
			}

			// === ASR Segment Hover Highlighting ===
			// Highlight all instances of the same segment and corresponding tokens on hover
			function highlightSegment(segIdx, highlight) {
				// Find all ASR segment elements with the same index
				const allAsrSegs = document.querySelectorAll(`.asr-segment[data-seg-idx="${segIdx}"]`);

				// Get time range from matching elements
				let startTime = Infinity, endTime = 0;
				allAsrSegs.forEach(seg => {
					const start = parseFloat(seg.dataset.start);
					const end = parseFloat(seg.dataset.end);
					if (start < startTime) startTime = start;
					if (end > endTime) endTime = end;
				});

				// Highlight/unhighlight ASR segment labels
				allAsrSegs.forEach(seg => {
					if (highlight) {
						seg.classList.add('bg-purple-100', 'text-purple-700');
						seg.classList.remove('text-gray-400');
					} else {
						seg.classList.remove('bg-purple-100', 'text-purple-700');
						// Only restore gray if not selected
						if (!selectedSegments.has(parseInt(seg.dataset.segIdx))) {
							seg.classList.add('text-gray-400');
						}
					}
				});

				// Highlight/unhighlight tokens within the time range
				tokens.forEach(token => {
					const tokenStart = parseFloat(token.dataset.start);
					if (tokenStart >= startTime && tokenStart <= endTime) {
						if (highlight) {
							token.classList.add('bg-purple-200');
						} else {
							token.classList.remove('bg-purple-200');
						}
					}
				});
			}

			// Click on ASR segment to toggle selection, hover to highlight
			asrSegments.forEach(seg => {
				// Hover events
				seg.addEventListener('mouseenter', () => {
					highlightSegment(seg.dataset.segIdx, true);
				});
				seg.addEventListener('mouseleave', () => {
					highlightSegment(seg.dataset.segIdx, false);
				});

				// Click event
				seg.addEventListener('click', (e) => {
					e.stopPropagation();
					const idx = parseInt(seg.dataset.segIdx);

					if (e.shiftKey && selectedSegments.size > 0) {
						// Shift-click: select range
						const sortedIndices = Array.from(selectedSegments).sort((a, b) => a - b);
						const minIdx = Math.min(sortedIndices[0], idx);
						const maxIdx = Math.max(sortedIndices[sortedIndices.length - 1], idx);
						for (let i = minIdx; i <= maxIdx; i++) {
							selectedSegments.add(i);
						}
					} else if (selectedSegments.has(idx)) {
						selectedSegments.delete(idx);
					} else {
						// Ensure contiguous selection
						if (selectedSegments.size > 0) {
							const sortedIndices = Array.from(selectedSegments).sort((a, b) => a - b);
							const minIdx = sortedIndices[0];
							const maxIdx = sortedIndices[sortedIndices.length - 1];
							if (idx < minIdx - 1 || idx > maxIdx + 1) {
								// Not adjacent, clear and select new
								selectedSegments.clear();
							} else {
								// Fill the gap
								for (let i = Math.min(minIdx, idx); i <= Math.max(maxIdx, idx); i++) {
									selectedSegments.add(i);
								}
							}
						}
						selectedSegments.add(idx);
					}

					updateSelectionUI();
				});
			});

			// Clear selection
			clearSelectionBtn.addEventListener('click', () => {
				selectedSegments.clear();
				updateSelectionUI();
			});

			// === Re-transcribe Modal ===
			const retranscribeModal = document.getElementById('retranscribe-modal');
			const modalCloseBtn = document.getElementById('retranscribe-modal-close');
			const modalSelectionInfo = document.getElementById('modal-selection-info');
			const modalModel = document.getElementById('modal-model');
			const modalTempo = document.getElementById('modal-tempo');
			const modalExecuteBtn = document.getElementById('modal-execute-btn');
			const modalLoading = document.getElementById('modal-loading');
			const modalOriginalContent = document.getElementById('modal-original-content');
			const modalResultContent = document.getElementById('modal-result-content');
			const modalCancelBtn = document.getElementById('modal-cancel-btn');
			const modalApplyBtn = document.getElementById('modal-apply-btn');
			// Whisper Align specific elements
			const modalAlignInfo = document.getElementById('modal-align-info');
			const modalWhisperRaw = document.getElementById('modal-whisper-raw');
			const modalAlignmentDiff = document.getElementById('modal-alignment-diff');

			let currentPreviewResult = null; // Store preview result for apply

			// Format time as MM:SS.mm
			function formatTimeMs(seconds) {
				const mins = Math.floor(seconds / 60);
				const secs = seconds % 60;
				return `${mins}:${secs.toFixed(2).padStart(5, '0')}`;
			}

			// Render segments to HTML
			function renderSegments(segments, isResult = false) {
				if (!segments || segments.length === 0) {
					return '<div class="text-gray-400 text-center py-4">セグメントがありません</div>';
				}

				return segments.map(seg => {
					const bgClass = isResult ? 'bg-green-50 border-green-200' : 'bg-gray-50 border-gray-200';
					const timeClass = isResult ? 'text-green-600' : 'text-gray-500';
					return `
						<div class="mb-3 p-2 rounded border ${bgClass}">
							<div class="flex justify-between items-start mb-1">
								<span class="text-xs ${timeClass}">${formatTimeMs(seg.start_time)} - ${formatTimeMs(seg.end_time)}</span>
								<span class="text-xs text-gray-400">seg${seg.index}</span>
							</div>
							<div class="text-sm">${seg.text || '<span class="text-gray-400">(空)</span>'}</div>
						</div>
					`;
				}).join('');
			}

			// Render alignment diff to HTML
			function renderAlignmentDiff(diff) {
				if (!diff || diff.length === 0) return '';

				return diff.map(item => {
					let className = '';
					let text = item.char;

					switch (item.op) {
						case 'match':
							className = 'bg-gray-200 text-gray-800';
							break;
						case 'insert':
							className = 'bg-green-200 text-green-800';
							break;
						case 'delete':
							className = 'bg-red-200 text-red-800 line-through';
							break;
					}

					// Handle special characters for display
					if (text === ' ') text = '\u00A0'; // Non-breaking space
					if (text === '\n') text = '↵';

					return `<span class="${className} px-0.5">${text}</span>`;
				}).join('');
			}

			// Show/hide Whisper Align info section
			function updateAlignInfoVisibility(show, result = null) {
				if (show && result) {
					modalAlignInfo.classList.remove('hidden');
					modalWhisperRaw.textContent = result.whisper_raw_text || '';
					modalAlignmentDiff.innerHTML = renderAlignmentDiff(result.alignment_diff);
				} else {
					modalAlignInfo.classList.add('hidden');
					modalWhisperRaw.textContent = '';
					modalAlignmentDiff.innerHTML = '';
				}
			}

			// Open modal and show original segments
			async function openRetranscribeModal() {
				if (selectedSegments.size === 0) return;

				const sortedIndices = Array.from(selectedSegments).sort((a, b) => a - b);
				const minIdx = sortedIndices[0];
				const maxIdx = sortedIndices[sortedIndices.length - 1];

				// Find time range
				let startTime = Infinity, endTime = 0;
				asrSegments.forEach(seg => {
					const idx = parseInt(seg.dataset.segIdx);
					if (idx >= minIdx && idx <= maxIdx) {
						const start = parseFloat(seg.dataset.start);
						const end = parseFloat(seg.dataset.end);
						if (start < startTime) startTime = start;
						if (end > endTime) endTime = end;
					}
				});

				const duration = endTime - startTime;
				modalSelectionInfo.textContent = `seg${minIdx + 1}${minIdx !== maxIdx ? '-seg' + (maxIdx + 1) : ''} (${startTime.toFixed(1)}s - ${endTime.toFixed(1)}s, ${duration.toFixed(1)}秒)`;

				// Copy values from selection bar
				modalModel.value = document.getElementById('retranscribe-model').value;
				modalTempo.value = retranscribeTempo.value;

				// Fetch original segments
				const data = await fetchTranscriptData();
				if (data && data.segments) {
					const originalSegments = [];
					for (let i = minIdx; i <= maxIdx && i < data.segments.length; i++) {
						originalSegments.push({
							index: i + 1, // 1-based for display (consistent with API)
							start_time: data.segments[i].start_time,
							end_time: data.segments[i].end_time,
							text: data.segments[i].text
						});
					}
					modalOriginalContent.innerHTML = renderSegments(originalSegments, false);
				}

				// Reset result pane and align info
				modalResultContent.innerHTML = '<div class="text-gray-400 text-center py-8">「実行」ボタンを押して再文字起こしを実行してください</div>';
				modalApplyBtn.disabled = true;
				currentPreviewResult = null;
				updateAlignInfoVisibility(false);

				// Show modal
				retranscribeModal.classList.remove('hidden');
			}

			// Close modal
			function closeRetranscribeModal() {
				retranscribeModal.classList.add('hidden');
				currentPreviewResult = null;
				updateAlignInfoVisibility(false);
			}

			// Execute preview (without saving)
			async function executePreview() {
				if (selectedSegments.size === 0) return;

				const sortedIndices = Array.from(selectedSegments).sort((a, b) => a - b);
				const segmentStart = sortedIndices[0];
				const segmentEnd = sortedIndices[sortedIndices.length - 1];
				const tempo = parseFloat(modalTempo.value);
				const model = modalModel.value;

				// Show loading
				modalExecuteBtn.classList.add('hidden');
				modalLoading.classList.remove('hidden');
				modalResultContent.innerHTML = '<div class="text-gray-400 text-center py-8">処理中...</div>';

				try {
					const response = await fetch(`/api/audio/${sourceID}/retranscribe`, {
						method: 'POST',
						headers: { 'Content-Type': 'application/json' },
						body: JSON.stringify({
							segment_start: segmentStart,
							segment_end: segmentEnd,
							tempo: tempo,
							model: model,
							preview: true
						})
					});

					const result = await response.json();

					if (response.ok && result.success) {
						currentPreviewResult = {
							segment_start: segmentStart,
							segment_end: segmentEnd,
							tempo: tempo,
							model: model
						};
						modalResultContent.innerHTML = renderSegments(result.new_segments, true);
						modalApplyBtn.disabled = false;

						// Show Whisper Align info if available
						if (model === 'whisper:align' && result.whisper_raw_text) {
							updateAlignInfoVisibility(true, result);
						} else {
							updateAlignInfoVisibility(false);
						}
					} else {
						modalResultContent.innerHTML = `<div class="text-red-500 text-center py-8">エラー: ${result.error || '再文字起こしに失敗しました'}</div>`;
						modalApplyBtn.disabled = true;
						updateAlignInfoVisibility(false);
					}
				} catch (err) {
					modalResultContent.innerHTML = `<div class="text-red-500 text-center py-8">エラー: ${err.message}</div>`;
					modalApplyBtn.disabled = true;
					updateAlignInfoVisibility(false);
				} finally {
					modalExecuteBtn.classList.remove('hidden');
					modalLoading.classList.add('hidden');
				}
			}

			// Apply changes (save)
			async function applyChanges() {
				if (!currentPreviewResult) return;

				modalApplyBtn.disabled = true;
				modalApplyBtn.textContent = '適用中...';

				try {
					const response = await fetch(`/api/audio/${sourceID}/retranscribe`, {
						method: 'POST',
						headers: { 'Content-Type': 'application/json' },
						body: JSON.stringify({
							segment_start: currentPreviewResult.segment_start,
							segment_end: currentPreviewResult.segment_end,
							tempo: currentPreviewResult.tempo,
							model: currentPreviewResult.model,
							preview: false
						})
					});

					const result = await response.json();

					if (response.ok && result.success) {
						// Reload page to show updated transcript
						window.location.reload();
					} else {
						alert('エラー: ' + (result.error || '保存に失敗しました'));
						modalApplyBtn.disabled = false;
						modalApplyBtn.textContent = '適用';
					}
				} catch (err) {
					alert('エラー: ' + err.message);
					modalApplyBtn.disabled = false;
					modalApplyBtn.textContent = '適用';
				}
			}

			// Event listeners for modal
			retranscribeBtn.addEventListener('click', openRetranscribeModal);
			modalCloseBtn.addEventListener('click', closeRetranscribeModal);
			modalCancelBtn.addEventListener('click', closeRetranscribeModal);
			modalExecuteBtn.addEventListener('click', executePreview);
			modalApplyBtn.addEventListener('click', applyChanges);

			// Close modal on backdrop click
			retranscribeModal.addEventListener('click', (e) => {
				if (e.target === retranscribeModal) {
					closeRetranscribeModal();
				}
			});

			// Close modal on Escape key
			document.addEventListener('keydown', (e) => {
				if (e.key === 'Escape' && !retranscribeModal.classList.contains('hidden')) {
					closeRetranscribeModal();
				}
			});
		</script>
	}
}
